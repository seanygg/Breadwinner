<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/background_light">

    <EditText
        android:id="@+id/add_review"
        android:layout_width="369dp"
        android:layout_height="250dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/search_layout"
        android:ems="10"
        android:hint="Was your chef naughty or nice..."
        android:gravity="top|left"
        android:inputType="textPersonName"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textColorHint="#DDE3E7"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="292dp"
        android:layout_marginTop="204dp"
        android:backgroundTint="@android:color/background_light"
        app:elevation="6dp"
        app:layout_constraintLeft_toLeftOf="@id/add_review"
        app:layout_constraintTop_toTopOf="@id/add_review"
        app:pressedTranslationZ="12dp"
        app:useCompatPadding="true" />

    <RatingBar
        android:id="@+id/add_new_rating"
        style="@style/Widget.AppCompat.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:isIndicator="false"
        android:theme="@style/RatingBar"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="51dp"
        app:layout_constraintBottom_toTopOf="@id/add_review"/>

</android.support.constraint.ConstraintLayout>