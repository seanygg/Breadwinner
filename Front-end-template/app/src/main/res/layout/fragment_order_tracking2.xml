<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/placed_time"
            android:layout_width="62dp"
            android:layout_height="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/order_placed_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/order_placed_icon" />

        <View
            android:id="@+id/view5"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="@+id/order_accepted_icon"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="@+id/order_accepted_icon"
            tools:layout_editor_absoluteY="16dp" />

        <!-- the circular icon on the left -->

        <TextView
            android:id="@+id/accepted_time"
            android:layout_width="62dp"
            android:layout_height="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/order_accepted_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/order_accepted_icon" />

        <View
            android:id="@+id/order_completed_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view5"
            app:layout_constraintStart_toStartOf="@+id/view5"
            app:layout_constraintTop_toTopOf="@+id/view5"
            app:layout_constraintVertical_bias="0.82" />

        <TextView
            android:id="@+id/order_placed"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/order_placed_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/order_placed_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.98" />

        <TextView
            android:id="@+id/order_place_message"
            android:layout_width="184dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/order_accepted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/order_placed_icon"
            app:layout_constraintTop_toBottomOf="@+id/order_placed" />

        <TextView
            android:id="@+id/cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/colorAccent"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/placed_time"
            app:layout_constraintTop_toBottomOf="@id/order_place_message" />


        <View
            android:id="@+id/order_placed_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view5"
            app:layout_constraintStart_toStartOf="@+id/view5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.07999998" />

        <TextView
            android:id="@+id/order_accepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/order_accepted_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/order_accepted_icon"
            app:layout_constraintTop_toTopOf="@+id/order_accepted_icon" />

        <TextView
            android:id="@+id/order_accepted_message"
            android:layout_width="183dp"
            android:layout_height="54dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/ready_for_pickup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ready_for_pickup_icon"
            app:layout_constraintTop_toBottomOf="@+id/order_accepted"
            app:layout_constraintVertical_bias="0.075" />

        <TextView
            android:id="@+id/time_of_pickup"
            android:layout_width="243dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ready_for_pickup_icon"
            app:layout_constraintTop_toBottomOf="@+id/order_accepted_message" />

        <TextView
            android:id="@+id/location"
            android:layout_width="243dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/colorAccent"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/ready_for_pickup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ready_for_pickup_icon"
            app:layout_constraintTop_toBottomOf="@+id/time_of_pickup"
            app:layout_constraintVertical_bias="0.009" />


        <TextView
            android:id="@+id/delivery_time"
            android:layout_width="62dp"
            android:layout_height="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/ready_for_pickup_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ready_for_pickup_icon"
            app:layout_constraintVertical_bias="0.52" />

        <View
            android:id="@+id/order_accepted_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view5"
            app:layout_constraintVertical_bias="0.244" />

        <TextView
            android:id="@+id/ready_for_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/ready_for_pickup_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ready_for_pickup_icon"
            app:layout_constraintTop_toTopOf="@+id/ready_for_pickup_icon" />


        <View
            android:id="@+id/ready_for_pickup_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view5"
            app:layout_constraintEnd_toEndOf="@+id/view5"
            app:layout_constraintStart_toStartOf="@+id/view5"
            app:layout_constraintTop_toTopOf="@+id/view5"
            app:layout_constraintVertical_bias="0.73" />

        <TextView
            android:id="@+id/order_pickedup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/order_completed_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/order_completed_icon"
            app:layout_constraintTop_toTopOf="@+id/order_completed_icon" />


        <TextView
            android:id="@+id/pickup_time"
            android:layout_width="62dp"
            android:layout_height="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#555555"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/order_completed_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/order_completed_icon" />


    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.SwipeRefreshLayout>